
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CadastroDeProdutos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CadastroDeProdutos.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CadastroDeProdutos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Adicionar">Adicionar Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Index">Visualizar Produtos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container text-center">
            <div class="row align-items-center">
                <div class="col">
                    <div class="footer-pic">
                        <img width="100" height="100" src="~/Logo.jpg" />
                    </div>
                </div>
                <div class="col">
                    <p>Contato 11 970334910</p>
                    <p>Copyright Augusto_Rajão</p>
                </div>
                <div class="col">
                    <div class="footer-pic" >
                        @* @{
                            var url = Context.Request.Path;
                        }
                        @switch (url.Value.ToLower())
                        {
                            case "/":
                                <img width="100" height="100" src="~/Playstation5.png" />
                                break;
                            case "/produto/adicionar":
                                <img width="100" height="100" src="~/televisao.png" />
                                break;
                            case "/produto":
                                <img width="100" height="100" src="~/xbox.png" />
                                break;
       
                        } *@
                        @if (IsSectionDefined("RightFooter"))
                        {
                            @RenderSection("RightFooter")
                        }
                        else
                        {
                            <img width="100" height="100" src="~/DS.jpg" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
