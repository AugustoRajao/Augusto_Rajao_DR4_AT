@model List<ProdutoModel>
@{
    ViewData["Title"] = "Listagem De Produtos";
}
<div class="text-center">
    <h1 class="display-4">Listagem de Produtos</h1>
    <div>Total de produtos cadastrados: @Model.Capacity</div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Preço</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Data de Inserção</th>
                <th scope="col">Imagem</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ProdutoModel produto in Model)
                {
                    <tr>
                        <th scope="row">@produto.Id</th>
                        <td>@produto.nome</td>
                        <td>@produto.preço</td>
                        <td>@produto.quantidade</td>
                        <td>@produto.dataInsercao</td>
                        <td>
                            <img width="50" height="50" src="~/images/@produto.imageFileName"/>
                        </td>

                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-primary" asp-route-id="@produto.Id" asp-controller="Produto" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@produto.Id" asp-controller="Produto" asp-action="ApagarValidacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>